---
import Layout from '../layouts/Layout.astro';
import {Shades} from "./../components/react/Shades";
import {OptionsDock} from "./../components/react/OptionsDock";
import ThemeSwitcher from "./../components/react/ThemeSwitcher";
import {Button} from "./../components/react/DockButton";
---

<Layout title="Spectr">
	<header class="relative z-10 -mx-4 pb-2 h-fit -translate-y-16 hover:translate-y-0 duration-150 delay-75">
		<div class="bg-gray-950/50 backdrop-blur-xl border-b border-white/5 px-4 w-full py-0.5 my-auto mx-auto flex items-center gap-2 justify-between">
			<div class="flex items-center -ml-3">
				<a href="/" class="px-3 py-0.5 rounded-md hover:bg-white/10">
					<svg class="relative size-6 transition duration-300 text-white" width="32" height="32" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
						<circle cx="40" cy="31" r="5" fill="currentColor"/>
						<circle cx="59" cy="31" r="5" fill="currentColor"/>
						<circle opacity={0.75} cx="40" cy="50" r="5" fill="currentColor"/>
						<circle opacity={0.75} cx="59" cy="50" r="5" fill="currentColor"/>
						<circle opacity={0.50} cx="40" cy="69" r="5" fill="currentColor"/>
						<circle opacity={0.50} cx="59" cy="69" r="5" fill="currentColor"/>
					</svg>
				</a>
				<div class="flex text-sm">
					<a href="https://github.com/Meschacirung/spectr" class="px-2 py-0.5 rounded-md hover:bg-white/10 text-gray-200 hover:text-white">Github</a>
					<a href="" class="px-3 py-0.5 rounded-md hover:bg-white/10 text-gray-200 hover:text-white">X / Twitter</a>
					<a href="" class="px-3 py-0.5 rounded-md hover:bg-white/10 text-gray-200 hover:text-white">Threads</a>
					<a href="" class="px-3 py-0.5 rounded-md hover:bg-white/10 text-gray-200 hover:text-white">LinkedIn</a>
				</div>
			</div>
			<a href="" class="px-3 py-0.5 rounded-md hover:bg-gray-800 text-gray-200 hover:text-white text-sm">Built by MÃ©schac Irung</a>
		</div>
		<div class="px-6 py-2.5 bg-white shadow dark:bg-gray-900">
			<div class="flex gap-2">
				<span class="block size-2.5 rounded-full border border-gray-950/10 dark:border-white/10 bg-danger-600 dark:bg-danger-500"></span>
				<span class="block size-2.5 rounded-full border border-gray-950/10 dark:border-white/10 bg-warning-600 dark:bg-warning-500"></span>
				<span class="block size-2.5 rounded-full border border-gray-950/10 dark:border-white/10 bg-success-600 dark:bg-success-500"></span>
			</div>
		</div>
	</header>
	<main class="relative overflow-y-auto snap-y snap-mandatory h-[calc(100vh-12rem)]">
		<div class="fixed z-50 bottom-8 inset-x-0 mx-auto flex gap-4 w-fit">
			<div class="px-4 py-2 flex border rounded-2xl shadow-md shadow-gray-950/5 bg-white/50 dark:bg-gray-900/25 backdrop-blur-2xl dark:border-[--ui-dark-border-color]">
				<div class="flex items-center justify-between h-fit my-auto gap-12">
					<div>
						<div class="flex gap-1">
							<label for="color" class="block size-6 rounded-full bg-primary-600 has-[:focus]:outline">
								<input class="opacity-0 size-0 appearance-none  p-0" type="color" id="color" name="color" style="-webkit-appearance:none;">
							</label>
							
							<input class="h-6 px-2 py-1 border w-20 text-xs rounded-full bg-transparent dark:border-gray-800 dark:text-white" placeholder="HEX" type="text" value="#000987">
						</div>
					</div>
				</div>
			</div>
			<OptionsDock client:idle />
		</div>
